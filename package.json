{
	"name": "adl-backend-node-chapter",
	"version": "1.0.0",
	"description": "Basic node examples for ADL's node chapter",
	"main": "dist/src/index.js",
	"scripts": {
		"build": "npm run clean && npm run build-app",
		"build-app": "tsc",
		"clean": "rimraf dist && rimraf coverage",
		"debug": "npm run build && node --inspect dist/src/index.js",
		"watch": "npm run build && npm run watch-app",
		"watch-app": "concurrently -k -p \"[{name}]\" -n \"Typescript,Application\" -c \"yellow.bold,cyan.bold\" \"tsc -w\" \"nodemon dist/src/index.js\"",
		"start": "nodemon ."
	},
	"author": "Christian Bonilla <christianb354@gmail.com>",
	"license": "ISC",
	"dependencies": {
		"axios": "^0.18.0",
		"cors": "^2.8.5",
		"dotenv": "^6.2.0",
		"express": "^4.16.4"
	},
	"devDependencies": {
		"@types/cors": "^2.8.4",
		"@types/dotenv": "^6.1.0",
		"@types/express": "^4.16.1",
		"@types/node": "^10.12.22",
		"concurrently": "^4.1.0",
		"nodemon": "^1.18.9",
		"rimraf": "^2.6.3",
		"ts-node": "^8.0.2",
		"tslint": "^5.12.1",
		"typescript": "^3.3.3"
	}
}
